<view class="pyg_index">
  <!-- 搜索框结构 -->
  <Search></Search>
  <!-- 轮播图开始 -->
  <view class="index_swiper">
    <!-- swiper已经存在磨人的宽度和高度 -->
    <swiper class="" autoplay indicator-color interval="3000" indicator-active-color="#ff2d4a" indicator-dots>
      <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
        <image class="" src="{{item.image_src}}" mode="widthFix" lazy-load="false" binderror="" bindload=""></image>
      </swiper-item>
    </swiper>
  </view>
  <!-- 轮播图结束 -->
  <!-- 导航开始 -->
  <view class="index_cate">
    <navigator wx:for="{{catesList}}" wx:key="name" class="" open-type="navigate">
      <image class="" src="{{item.image_src}}" mode="widthFix" lazy-load="false" binderror="" bindload="" />
    </navigator>
  </view>
  <!-- 导航结束 -->
  <!-- 楼层开始 -->
  <view class="index_floor">
    <view class="floor_group" wx:for="{{floorList}}" wx:key="name"
    wx:for-item="item1"
    wx:for-index="index1">
      <!-- 标题 -->
      <view class="floor_title">
        <image src="{{item1.floor_title.image_src}}" mode="widthFix"></image>
      </view>
      <!-- 内容 -->
      <view class="floor_list">
        <navigator class="" target="" url="" open-type="navigate"
        wx:for="{{item1.product_list}}"
        wx:for-item="item2"
        wx:for-index="index2"
        wx:key="name">
          <image class="" src="{{item2.image_src}}" mode="{{index2===0?'widthFix':'scaleToFsssill'}}" lazy-load="false">
            
          </image>
        </navigator>
      </view>
    </view>
  </view>
  <!-- 楼层结束 -->
</view>