page {
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 45vh;
  filter: blur(2rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
}
.user_info_wrap .user_btn {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}
.user_content .history_wrap {
  background-color: #fff;
  display: flex;
}
.user_content .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .orders_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .orders_wrap .orders_title {
  border-bottom: 1rpx solid #ccc;
  font-size: 38rpx;
  padding: 20rpx;
}
.user_content .orders_wrap .orders_content {
  display: flex;
}
.user_content .orders_wrap .orders_content navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .orders_wrap .orders_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 48rpx;
}
.user_content .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
.user_content .app_info_wrap {
  background-color: #fff;
  margin-top: 10rpx;
}
.user_content .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.user_content .app_info_wrap .app_info_item {
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
}
.user_content .recommend_wrap {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
